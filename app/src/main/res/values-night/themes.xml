<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <!-- Text color -->
        <item name="normalTextColor">@color/very_dark_grey_3</item>
        <item name="pageTitleColor">@color/very_dark_grey_3</item>
        <item name="headingColor">@color/moderate_violet</item>
        <item name="categoryNameColor">@color/white</item>
        <item name="categoryTitleColor">@color/very_soft_violet</item>
        <item name="explanationTextColor">@color/soft_red_2</item>
        <item name="meditationListenTextColor">@color/bright_blue</item>
        <item name="reminderTextColor">@color/very_light_grey_3</item>
        <item name="lightCardColor">@color/very_light_grey_3</item>
        <item name="meditationQuestionColor">@color/bright_red_2</item>
        <item name="onLoggingCardColor">@color/white</item>

        <item name="borderColor">@color/dark_grayish_red_2</item>

        <item name="sliderTrackColorInactive">@color/light_grayish_red</item>
        <item name="sliderThumbColor">@color/very_light_grey_3</item>
        <item name="sliderTickColor">@color/white</item>

        <item name="bioAgeTextColor">@color/bright_blue_2</item>
        <item name="lifeStyleTextColor">@color/bright_red_2</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <item name="chipStyle">@style/Widget.Jeeva.App.Chip</item>
    </style>

</resources>