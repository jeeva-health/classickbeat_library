<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/cameraSelectionFragment">

    <fragment
        android:id="@+id/cameraSelectionFragment"
        android:name="ai.heart.classickbeats.ui.monitor.CameraSelectionFragment"
        android:label="fragment_camera_selection"
        tools:layout="@layout/fragment_camera_selection">
        <action
            android:id="@+id/action_cameraSelectionFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
    </fragment>

    <fragment
        android:id="@+id/oxygenResultFragment"
        android:name="ai.heart.classickbeats.ui.monitor.OxygenResultFragment"
        android:label="fragment_oxygen_result"
        tools:layout="@layout/fragment_oxygen_result">
        <action
            android:id="@+id/action_oxygenResultFragment_to_cameraSelectionFragment"
            app:destination="@id/cameraSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/heartResultFragment"
        android:name="ai.heart.classickbeats.ui.monitor.HeartResultFragment"
        android:label="fragment_heart_result"
        tools:layout="@layout/fragment_heart_result">
        <action
            android:id="@+id/action_heartResultFragment_to_cameraSelectionFragment"
            app:destination="@id/cameraSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/scanFragment"
        android:name="ai.heart.classickbeats.ui.monitor.ScanFragment"
        android:label="ScanFragment"
        tools:layout="@layout/fragment_scan">
        <argument
            android:name="test_type"
            app:argType="ai.heart.classickbeats.domain.TestType" />
        <action
            android:id="@+id/action_scanFragment_to_calculatingFragment"
            app:destination="@id/calculatingFragment" />
    </fragment>
    <fragment
        android:id="@+id/calculatingFragment"
        android:name="ai.heart.classickbeats.ui.monitor.CalculatingFragment"
        android:label="fragment_calculating"
        tools:layout="@layout/fragment_calculating">
        <action
            android:id="@+id/action_calculatingFragment_to_heartResultFragment"
            app:destination="@id/heartResultFragment" />
        <action
            android:id="@+id/action_calculatingFragment_to_oxygenResultFragment"
            app:destination="@id/oxygenResultFragment" />
    </fragment>

</navigation>