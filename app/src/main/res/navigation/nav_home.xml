<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/scanFragment">

    <fragment
        android:id="@+id/heartResultFragment"
        android:name="ai.heart.classickbeats.ui.ppg.HeartResultFragment"
        android:label="fragment_heart_result"
        tools:layout="@layout/fragment_heart_result">
        <action
            android:id="@+id/action_heartResultFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
    </fragment>

    <fragment
        android:id="@+id/scanFragment"
        android:name="ai.heart.classickbeats.ui.ppg.ScanFragment"
        android:label="ScanFragment"
        tools:layout="@layout/fragment_scan">
        <argument
            android:name="test_type"
            android:defaultValue="HEART_RATE"
            app:argType="ai.heart.classickbeats.domain.TestType" />
        <action
            android:id="@+id/action_scanFragment_to_calculatingFragment"
            app:destination="@id/calculatingFragment" />
    </fragment>

    <fragment
        android:id="@+id/calculatingFragment"
        android:name="ai.heart.classickbeats.ui.ppg.CalculatingFragment"
        android:label="fragment_calculating"
        tools:layout="@layout/fragment_calculating">
        <action
            android:id="@+id/action_calculatingFragment_to_heartResultFragment"
            app:destination="@id/heartResultFragment" />
    </fragment>

    <fragment
        android:id="@+id/logBpFragment"
        android:name="ai.heart.classickbeats.ui.logging.LogBpFragment"
        android:label="fragment_log_bp"
        tools:layout="@layout/fragment_log_bp" />
    <fragment
        android:id="@+id/historyHomeFragment"
        android:name="ai.heart.classickbeats.ui.history.HistoryHomeFragment"
        android:label="fragment_history_home"
        tools:layout="@layout/fragment_history_home" />
    <fragment
        android:id="@+id/loggingHomeFragment"
        android:name="ai.heart.classickbeats.ui.logging.LoggingHomeFragment"
        android:label="fragment_logging_home"
        tools:layout="@layout/fragment_logging_home" />
    <fragment
        android:id="@+id/profileHomeFragment"
        android:name="ai.heart.classickbeats.ui.profile.ProfileHomeFragment"
        android:label="fragment_profile_home"
        tools:layout="@layout/fragment_profile_home" />
    <fragment
        android:id="@+id/wellnessHomeFragment"
        android:name="ai.heart.classickbeats.ui.wellness.WellnessHomeFragment"
        android:label="fragment_wellness_home"
        tools:layout="@layout/fragment_wellness_home" />

</navigation>