<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/scanFragment">

    <fragment
        android:id="@+id/scanResultFragment"
        android:name="ai.heart.classickbeats.ui.ppg.ScanResultFragment"
        android:label="fragment_heart_result"
        tools:layout="@layout/fragment_scan_result" >
        <action
            android:id="@+id/action_scanResultFragment_to_historyHomeFragment"
            app:destination="@id/historyHomeFragment" />
        <argument
            android:name="showing_history"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>

    <fragment
        android:id="@+id/scanFragment"
        android:name="ai.heart.classickbeats.ui.ppg.ScanFragment"
        android:label="ScanFragment"
        tools:layout="@layout/fragment_scan">
        <action
            android:id="@+id/action_scanFragment_to_hrvInfoBottomSheetFragment"
            app:destination="@id/hrvInfoBottomSheetFragment" />
        <action
            android:id="@+id/action_scanFragment_to_scanQuestionFragment"
            app:destination="@id/scanQuestionFragment" />
        <action
            android:id="@+id/action_scanFragment_to_scanTutorialFragment"
            app:destination="@id/scanTutorialFragment" />
    </fragment>

    <fragment
        android:id="@+id/logBpFragment"
        android:name="ai.heart.classickbeats.ui.logging.LogBpFragment"
        android:label="fragment_log_bp"
        tools:layout="@layout/fragment_log_bp" />

    <fragment
        android:id="@+id/historyHomeFragment"
        android:name="ai.heart.classickbeats.ui.history.HistoryHomeFragment"
        android:label="fragment_history_home"
        tools:layout="@layout/fragment_history_home" >
        <action
            android:id="@+id/action_historyHomeFragment_to_scanResultFragment"
            app:destination="@id/scanResultFragment" />
    </fragment>

    <fragment
        android:id="@+id/loggingHomeFragment"
        android:name="ai.heart.classickbeats.ui.logging.LoggingHomeFragment"
        android:label="fragment_logging_home"
        tools:layout="@layout/fragment_logging_home">
        <action
            android:id="@+id/action_loggingHomeFragment_to_logBpFragment"
            app:destination="@id/logBpFragment" />
        <action
            android:id="@+id/action_loggingHomeFragment_to_logWeightFragment"
            app:destination="@id/logWeightFragment" />
        <action
            android:id="@+id/action_loggingHomeFragment_to_logGlucoseFragment"
            app:destination="@id/logGlucoseFragment" />
        <action
            android:id="@+id/action_loggingHomeFragment_to_logMedicationFragment"
            app:destination="@id/logMedicationFragment" />
        <action
            android:id="@+id/action_loggingHomeFragment_to_logWaterIntakeFragment"
            app:destination="@id/logWaterIntakeFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileHomeFragment"
        android:name="ai.heart.classickbeats.ui.profile.ProfileHomeFragment"
        android:label="fragment_profile_home"
        tools:layout="@layout/fragment_profile_home" />

    <fragment
        android:id="@+id/wellnessHomeFragment"
        android:name="ai.heart.classickbeats.ui.wellness.WellnessHomeFragment"
        android:label="fragment_wellness_home"
        app:startDestination="@id/action_wellnessHomeFragment_to_wellnessCategoryFragment"
        tools:layout="@layout/fragment_wellness_home">
        <action
            android:id="@+id/action_wellnessHomeFragment_to_wellnessCategoryFragment"
            app:destination="@id/wellnessCategoryFragment" />
    </fragment>

    <dialog
        android:id="@+id/hrvInfoBottomSheetFragment"
        android:name="ai.heart.classickbeats.ui.ppg.HrvInfoBottomSheetFragment"
        android:label="fragment_hrv_info_bottom_sheet"
        tools:layout="@layout/fragment_hrv_info_bottom_sheet" />

    <fragment
        android:id="@+id/scanQuestionFragment"
        android:name="ai.heart.classickbeats.ui.ppg.ScanQuestionFragment"
        android:label="fragment_scan_question"
        tools:layout="@layout/fragment_scan_question">
        <action
            android:id="@+id/action_scanQuestionFragment_to_scanResultFragment"
            app:destination="@id/scanResultFragment" />
    </fragment>

    <fragment
        android:id="@+id/wellnessCategoryFragment"
        android:name="ai.heart.classickbeats.ui.wellness.WellnessCategoryFragment"
        android:label="fragment_wellness_category"
        tools:layout="@layout/fragment_wellness_category">
        <action
            android:id="@+id/action_wellnessCategoryFragment_to_mediaPlayerFragment"
            app:destination="@id/mediaPlayerFragment" />
        <argument
            android:name="wellness_type"
            android:defaultValue="SLEEP"
            app:argType="ai.heart.classickbeats.model.WellnessType" />
    </fragment>

    <fragment
        android:id="@+id/mediaPlayerFragment"
        android:name="ai.heart.classickbeats.ui.wellness.MediaPlayerFragment"
        android:label="fragment_media_player"
        tools:layout="@layout/fragment_media_player" />

    <fragment
        android:id="@+id/scanTutorialFragment"
        android:name="ai.heart.classickbeats.ui.ppg.ScanTutorialFragment"
        android:label="fragment_scan_tutorial"
        tools:layout="@layout/fragment_scan_tutorial" />

    <fragment
        android:id="@+id/logWeightFragment"
        android:name="ai.heart.classickbeats.ui.logging.LogWeightFragment"
        android:label="fragment_log_weight"
        tools:layout="@layout/fragment_log_weight" />

    <fragment
        android:id="@+id/logGlucoseFragment"
        android:name="ai.heart.classickbeats.ui.logging.LogGlucoseFragment"
        android:label="fragment_log_glucose"
        tools:layout="@layout/fragment_log_glucose" />

    <fragment
        android:id="@+id/logMedicationFragment"
        android:name="ai.heart.classickbeats.ui.logging.LogMedicationFragment"
        android:label="fragment_log_medication"
        tools:layout="@layout/fragment_log_medication" />

    <fragment
        android:id="@+id/logWaterIntakeFragment"
        android:name="ai.heart.classickbeats.ui.logging.LogWaterIntakeFragment"
        android:label="fragment_log_water_intake"
        tools:layout="@layout/fragment_log_water_intake" />

    <dialog
        android:id="@+id/timePickerFragment"
        android:name="ai.heart.classickbeats.ui.widgets.TimePickerFragment"
        android:label="fragment_time_picker_dialog" />

    <dialog
        android:id="@+id/datePickerFragment"
        android:name="ai.heart.classickbeats.ui.widgets.DatePickerFragment"
        android:label="fragment_date_picker_dialog" />

    <action
        android:id="@+id/action_global_timePickerFragment"
        app:destination="@id/timePickerFragment" />

    <action
        android:id="@+id/action_global_datePickerFragment"
        app:destination="@id/datePickerFragment" />

</navigation>