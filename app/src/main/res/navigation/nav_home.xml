<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/cameraSelectionFragment">

    <fragment
        android:id="@+id/scanFragment"
        android:name="ai.heart.classickbeats.monitor.ScanFragment"
        android:label="fragment_scan"
        tools:layout="@layout/fragment_scan">
        <argument
            android:name="test_type"
            android:defaultValue="HEART_RATE"
            app:argType="ai.heart.classickbeats.monitor.TestType" />
    </fragment>

    <fragment
        android:id="@+id/cameraSelectionFragment"
        android:name="ai.heart.classickbeats.monitor.CameraSelectionFragment"
        android:label="fragment_camera_selection"
        tools:layout="@layout/fragment_camera_selection">
        <action
            android:id="@+id/action_cameraSelectionFragment_to_scanFragmentBorrowed"
            app:destination="@id/scanFragmentBorrowed" />
    </fragment>

    <fragment
        android:id="@+id/oxygenResultFragment"
        android:name="ai.heart.classickbeats.monitor.OxygenResultFragment"
        android:label="fragment_oxygen_result"
        tools:layout="@layout/fragment_oxygen_result">
        <action
            android:id="@+id/action_oxygenResultFragment_to_cameraSelectionFragment"
            app:destination="@id/cameraSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/heartResultFragment"
        android:name="ai.heart.classickbeats.monitor.HeartResultFragment"
        android:label="fragment_heart_result"
        tools:layout="@layout/fragment_heart_result">
        <action
            android:id="@+id/action_heartResultFragment_to_cameraSelectionFragment"
            app:destination="@id/cameraSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/scanFragmentBorrowed"
        android:name="ai.heart.classickbeats.monitor.ScanFragmentBorrowed"
        android:label="ScanFragmentBorrowed"
        app:startDestination="@id/action_scanFragmentBorrowed_to_oxygenResultFragment"
        tools:layout="@layout/fragment_scan">
        <action
            android:id="@+id/action_scanFragmentBorrowed_to_heartResultFragment"
            app:destination="@id/heartResultFragment" />
        <action
            android:id="@+id/action_scanFragmentBorrowed_to_oxygenResultFragment"
            app:destination="@id/oxygenResultFragment" />
        <argument
            android:name="test_type"
            android:defaultValue="HEART_RATE"
            app:argType="ai.heart.classickbeats.monitor.TestType" />
    </fragment>

</navigation>