<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="result_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="result_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Widget styles -->

    <style name="Widget.Jeeva" parent="@android:style/Widget.Material" />

    <style name="Widget.Jeeva.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Jeeva.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.Jeeva.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Jeeva.SmallComponent</item>
    </style>

    <style name="Widget.Jeeva.Button.Negative" parent="Widget.Jeeva.Button">
        <item name="backgroundTint">@color/soft_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Jeeva.TextButton" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="TextAppearance.Jeeva.H0" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_size_h0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Jeeva.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Jeeva.H2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="TextAppearance.Jeeva.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="TextAppearance.Jeeva.H4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>

    <style name="TextAppearance.Jeeva.H5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_h5</item>
    </style>

    <style name="TextAppearance.Jeeva.Body1" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.Jeeva.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="TextAppearance.Jeeva.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="TextAppearance.Jeeva.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="TextAppearance.Jeeva.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Jeeva.AppName" parent="TextAppearance.Jeeva.H1">
        <item name="android:textSize" tools:ignore="SpUsage">60dp</item>
    </style>

    <style name="TextAppearance.Jeeva.AppName.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Jeeva.TnC" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Jeeva.Tagline" parent="TextAppearance.Jeeva.H4">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Jeeva.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TextAppearance.Jeeva.OnBoardingMessage" parent="TextAppearance.Jeeva.H1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" tools:ignore="SpUsage">36dp</item>
    </style>

    <style name="TextAppearance.Jeeva.ScanTutorialMessage" parent="TextAppearance.Jeeva.H1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Jeeva.HeartRate" parent="TextAppearance.Jeeva.H1">
        <item name="android:textSize" tools:ignore="SpUsage">60dp</item>
        <item name="android:textColor">@color/bright_red_2</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Jeeva.ScanMessage" parent="TextAppearance.Jeeva.H4">
        <item name="android:textColor">@color/very_dark_violet</item>
    </style>

    <style name="Widget.Jeeva.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Jeeva.ToolbarTitle</item>
    </style>

    <style name="ShapeAppearance.Jeeva.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.Jeeva.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Jeeva.Switch</item>
    </style>

    <style name="Widget.Jeeva.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Jeeva.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Jeeva.ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/Widget.Jeeva.ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="Widget.Jeeva.ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Widget.Jeeva.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipStrokeWidth">2dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipMinHeight">36dp</item>
    </style>

    <style name="PersonalInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

</resources>
