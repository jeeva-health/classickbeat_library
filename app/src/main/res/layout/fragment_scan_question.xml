              android:id="@+id/chip_chilling"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="96dp"
              android:text="@string/chip_chilling" />

          <com.google.android.material.chip.Chip
              android:id="@+id/chip_working"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="96dp"
              android:text="@string/chip_working" />

          <com.google.android.material.chip.Chip
              android:id="@+id/chip_sleeping"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="96dp"
              android:text="@string/chip_sleeping"
              app:checkedIcon="true"
              app:chipIcon="@drawable/google_icon" />

          <com.google.android.material.chip.Chip
              android:id="@+id/chip_eating"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="96dp"
              android:text="@string/chip_eating" />

          <com.google.android.material.chip.Chip
              android:id="@+id/chip_workout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="96dp"
              android:text="@string/chip_workout" />

          <com.google.android.material.chip.Chip
              android:id="@+id/chip_other"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="96dp"
              android:text="@string/chip_other" />

        </com.google.android.material.chip.ChipGroup>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <Button
          android:id="@+id/button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Button" />

    </LinearLayout>


  </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

