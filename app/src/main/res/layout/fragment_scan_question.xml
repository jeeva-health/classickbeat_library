            app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
            app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
            app:layout_constraintTop_toBottomOf="@+id/before_scan_chip_group" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/before_scan_chip_group_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:chipSpacingHorizontal="12dp"
            app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
            app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:selectionRequired="true"
            app:singleSelection="true">

