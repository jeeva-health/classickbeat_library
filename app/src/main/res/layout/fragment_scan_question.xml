<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_indigo"
    app:layoutDescription="@xml/fragment_scan_question_scene"
    tools:context=".ui.ppg.fragment.ScanQuestionFragment">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_collapseMode="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_shutter"
            android:minHeight="50dp"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_done_24"
            app:tint="@color/moderate_green" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:text="@string/scan_successful"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:gravity="center"
            android:text="@string/give_us_a_few_moments_till_we_process_your_detailed_insights"
            android:textColor="@color/light_blue_gray"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout

        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:background="@drawable/bg_gradient_rect_sky_6"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guideline_nested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="32dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guideline_nested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="32dp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="100dp"
                android:layout_height="8dp"
                android:layout_marginTop="25dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
                app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.slider.Slider
                android:id="@+id/sleep_slider"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_rectangle_6"
                android:contentDescription="continuous slider"
                android:stepSize="30"
                android:value="180"
                android:valueFrom="0"
                android:valueTo="1080"
                app:haloColor="@color/light_pink"
                app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:thumbColor="@color/rosy_pink"
                app:thumbRadius="12dp"
                app:thumbStrokeColor="@color/white"
                app:thumbStrokeWidth="6dp"
                app:trackColorActive="@color/rosy_pink"
                app:trackColorInactive="@color/light_pink"
                app:trackHeight="6dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/sleep_question"
                android:textColor="@color/charcoal_grey"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4" />

            <TextView
                android:id="@+id/sleep_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="6:30"
                android:textColor="@color/charcoal_grey"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
                app:layout_constraintTop_toBottomOf="@+id/sleep_slider" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/hours_minutes"
                android:textColor="#d4d4d4"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/sleep_time_text"
                app:layout_constraintEnd_toStartOf="@+id/sleep_time_text" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/mood_question"
                android:textColor="@color/charcoal_grey"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
                app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/before_scan_chip_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="12dp"
                app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
                app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:selectionRequired="true"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_happy"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_good"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sick"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_excited"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_energetic"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_calm"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sad"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tired"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_normal"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_stressed"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="@string/before_scanning_question"
                android:textColor="@color/charcoal_grey"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
                app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
                app:layout_constraintTop_toBottomOf="@+id/before_scan_chip_group" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/before_scan_chip_group_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="12dp"
                app:layout_constraintEnd_toStartOf="@+id/end_guideline_nested"
                app:layout_constraintStart_toStartOf="@+id/start_guideline_nested"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_chilling"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_working"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sleeping"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_eating"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_workout"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_other"
                    style="@style/Widget.Jeeva.MaterialComponents.ChipBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.chip.ChipGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="32dp"
            android:layout_marginBottom="@dimen/page_bottom_button_margin"
            android:background="@drawable/bg_rectangle_6"
            android:backgroundTint="@color/light_grayish_red_4"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/end_guideline"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/dob_layout"
            app:layout_constraintVertical_bias="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/continue_1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/continue_btn_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_circle_fill"
                android:backgroundTint="@color/dark_grayish_red"
                android:contentDescription="@string/click"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_arrow_forward"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>
