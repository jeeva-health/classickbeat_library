<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_dark_blue"
    android:fitsSystemWindows="true"
    tools:context=".ui.wellness.MediaPlayerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/very_dark_blue">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-116dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/bg_star_2" />

        <ImageView
            android:id="@+id/background_circle_1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_circle_1_2"
            android:translationY="-48dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/background_circle_2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:src="@drawable/bg_circle_2_2"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="12dp"
            android:padding="12dp"
            android:src="@drawable/ic_cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:textColor="?attr/categoryTitleColor"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sleep Well" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="12dp"
            android:textColor="?attr/categoryTitleColor"
            app:layout_constraintEnd_toStartOf="@id/guided_meditation_switch"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Guided sound by Shakti" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/guided_meditation_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/author"
            app:layout_constraintTop_toTopOf="@id/author" />

        <ImageView
            android:id="@+id/play_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_play"
            app:layout_constraintBottom_toTopOf="@id/audio_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/seek_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="46dp"
            android:src="@drawable/ic_seek_backward"
            app:layout_constraintBottom_toBottomOf="@id/play_pause_btn"
            app:layout_constraintEnd_toStartOf="@id/play_pause_btn"
            app:layout_constraintTop_toTopOf="@id/play_pause_btn" />

        <ImageView
            android:id="@+id/seek_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:src="@drawable/ic_seek_forward"
            app:layout_constraintBottom_toBottomOf="@id/play_pause_btn"
            app:layout_constraintStart_toEndOf="@id/play_pause_btn"
            app:layout_constraintTop_toTopOf="@id/play_pause_btn" />

        <TextView
            android:id="@+id/play_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/press_play"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/play_pause_btn"
            app:layout_constraintStart_toStartOf="@id/play_pause_btn"
            app:layout_constraintTop_toBottomOf="@id/play_pause_btn" />

        <ProgressBar
            android:id="@+id/audio_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="82dp"
            android:max="100"
            android:progressBackgroundTint="@color/very_light_grey"
            android:progressTint="@color/soft_red_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:progress="50" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dim_background"
            android:elevation="16dp"
            android:indeterminateTint="@color/white"
            android:padding="144dp"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
