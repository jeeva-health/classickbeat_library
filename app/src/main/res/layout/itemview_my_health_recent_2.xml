<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:padding="16dp"
    android:background="@drawable/bg_rectangle_16"
    >

    <TextView
        android:id="@+id/recentVitals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif"
        android:text="Vitals"
        android:textColor="@color/charcoal_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/recentBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/recentIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="00"
        android:textColor="@color/charcoal_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/recentIcon"
        app:layout_constraintTop_toBottomOf="@+id/recentVitals" />

    <TextView
        android:id="@+id/recentTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif"
        android:text="9:30 AM"
        android:textAllCaps="true"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/recentIcon"
        app:layout_constraintTop_toBottomOf="@+id/recentUnit" />

    <TextView
        android:id="@+id/recentUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="kg"
        android:textAllCaps="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/recentValue"
        app:layout_constraintStart_toEndOf="@+id/recentValue" />

    <ImageView
        android:id="@+id/recentIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_name_logo" />

    <ImageView
        android:id="@+id/recentBtn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/bg_circle_fill"
        android:backgroundTint="@color/light_pink"
        app:tint="@color/rosy_pink"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_forward" />
</androidx.constraintlayout.widget.ConstraintLayout>